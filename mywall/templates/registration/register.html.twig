{% extends 'base.html.twig' %}

{% block title %}Nitter{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 12px;">
        <div class="text-center mb-3">
            <h2 class="fw-bold text-primary">Crea tu cuenta</h2>
            <p class="text-muted">Únete a Nitter en segundos</p>
        </div>

        {{ form_start(registrationForm) }}

        <div class="mb-3">
            {{ form_label(registrationForm.username, 'Usuario', {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder': 'Elige un nombre de usuario'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword, 'Contraseña', {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Elige una contraseña'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <button type="submit" class="btn btn-primary w-100 fw-bold">Registrarse</button>

        {{ form_end(registrationForm) }}

        <div class="text-center mt-3">
            <small class="text-muted">¿Ya tienes una cuenta? <a href="{{ path('app_login') }}" class="text-primary">Inicia sesión</a></small>
        </div>
    </div>
</div>
{% endblock %}
