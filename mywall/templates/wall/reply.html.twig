{% extends 'base.html.twig' %}

{% block title %}Nitter{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="text-center mb-4">
        <h4 class="display-4">Responder al comentario</h4>
        <a href="{{ path('app_wall') }}" class="btn btn-outline-primary rounded-pill shadow-sm">Volver al Muro</a>
    </div>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-lg border-light">
                <div class="card-body">
                    <h5 class="card-title mb-3">{{ comment.author.username }}</h5>
                    <p class="mb-4">{{ comment.content }}</p>
                    <hr class="my-4">

                    <h6 class="text-muted">Escribe tu respuesta:</h6>

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.content, { 'attr': { 'class': 'form-control', 'placeholder': 'Escribe tu respuesta aqu√≠...', 'rows': 3 } }) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.submit, { 'attr': { 'class': 'btn btn-info text-white px-4 py-2 rounded-pill shadow-sm w-100' } }) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 900px;
    }

    .card {
        border-radius: 10px;
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    .btn-outline-primary {
        border-radius: 20px;
        padding: 10px 20px;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px 15px;
    }

    .btn-info {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

    .btn-info:hover {
        background-color: #0056b3;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    }

    .card-body {
        padding: 30px;
    }
</style>

{% endblock %}
