{% extends 'base.html.twig' %}

{% block title %}Nitter{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Crear un nuevo post</h1>

        <div class="card shadow-sm p-4">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        <label for="{{ form.content.vars.id }}" class="form-label">Contenido</label>
                        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Escribe tu publicaci√≥n...'}}) }}
                    </div>
                    <div class="mb-3">
                        <label for="{{ form.image.vars.id }}" class="form-label">Subir imagen (opcional)</label>
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
